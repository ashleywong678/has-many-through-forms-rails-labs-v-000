<h1><%=@post.title%></h1>
<p><%=@post.content%></p>
<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.user.username%> wrote: <%= comment.content %></li>
  <%end%>
</ul>

<h3>New Comment:</h3>
<%= form_for @comment do |f|%>
  <%= f.label :content%>
  <%= f.text_field :content%>
  <br>
  User:
  <%= f.collection_select(:user_id, User.all, :id, :username ) %>
  <%= f.text_field :user %>
  <%= f.submit%>
<%end%>
